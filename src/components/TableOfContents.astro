---
import type { MarkdownHeading } from 'astro';

interface Props {
  headings: MarkdownHeading[];
}

const { headings } = Astro.props;

const filteredHeadings = Array.isArray(headings) ? headings.filter((heading) => heading.depth > 1) : [];
---

<nav>
  <ul>
    {filteredHeadings.length > 0 && <h4>Table of Contents</h4>}
    {
      filteredHeadings.map((heading) => (
        <li>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))
    }
  </ul>
</nav>